<h1><%= title %></h1>
<% if (errors) { %>
<ul class="notice">
  <% errors.array().forEach(error => { %>
  <li><%= error.msg %></li>
  <% }) %>
</ul>
<% } %>
<form action="/account/login" method="POST">
  <div>
    <label for="email">Email:</label>
    <input type="email" id="email" name="username" required />
  </div>
  <div>
    <label for="password">Password:</label>
    <input
      type="password"
      id="password"
      name="password"
      required
      pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[\W]).{12,}"
      title="Password must be at least 12 characters long, contain at least 1 uppercase letter, 1 lowercase letter, 1 number, and 1 special character."
    />
  </div>
  <button type="submit">Login</button>
</form>
<a href="/account/register">Don't have an account? Register here.</a>
