<h1>Add New Inventory Item</h1>
<% if (errors) { %>
<ul class="notice">
  <% errors.array().forEach(error => { %>
  <li><%= error.msg %></li>
  <% }) %>
</ul>
<% } %>
<form action="/inv/inventory" method="post">
  <label for="itemName">Item Name:</label>
  <input
    type="text"
    id="itemName"
    name="itemName"
    required
    onfocus="validateInput(this)"
    onblur="validateInput(this)"
    oninput="validateInput(this)"
    value="<%=locals.itemName%>"
  />
  <label for="itemPrice">Item Price:</label>
  <input
    type="number"
    id="itemPrice"
    name="itemPrice"
    required
    onfocus="validateInput(this)"
    onblur="validateInput(this)"
    oninput="validateInput(this)"
    min="0.01"
    step="any"
    value="<%=locals.itemPrice%>"
  />
  <input type="submit" value="Add Inventory Item" />
</form>
<script src="/js/form-validation.js"></script>
